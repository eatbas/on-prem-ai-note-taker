# Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APP CONFIGURATION
# =============================================================================

APP_HOST=0.0.0.0                      # Bind address
APP_PORT=8000                          # Port number
LOG_LEVEL=INFO                         # Log level: DEBUG, INFO, WARNING, ERROR

# =============================================================================
# VPS OPTIMIZATIONS
# =============================================================================

# Whisper Settings
WHISPER_MODEL=base                    # Model size: tiny, base, small, medium, large
WHISPER_COMPUTE_TYPE=int8             # Compute type: int8, int16, float16, float32
WHISPER_DEVICE=cpu                    # Force CPU usage for VPS
WHISPER_CPU_THREADS=6                 # Optimize for 6 vCPU VPS
WHISPER_MEMORY_LIMIT_GB=16           # Memory limit for Whisper
WHISPER_BEAM_SIZE=1                   # Beam size for CPU optimization (1=faster, 5=better quality)
WHISPER_DOWNLOAD_ROOT=/models         # Local model storage (Docker path)

# Ollama Settings
OLLAMA_BASE_URL=http://ollama:11434   # Ollama service URL (Docker service)
OLLAMA_MODEL=llama3.1:8b             # Default model for summarization
OLLAMA_TIMEOUT_SECONDS=60             # Request timeout
OLLAMA_CPU_THREADS=6                  # CPU thread allocation
OLLAMA_MEMORY_LIMIT_GB=16             # Memory limit for Ollama

# =============================================================================
# LANGUAGE RESTRICTIONS
# =============================================================================

ALLOWED_LANGUAGES=tr,en,auto          # Allowed language options
FORCE_LANGUAGE_VALIDATION=true        # Strict language validation

# =============================================================================
# PROGRESS TRACKING
# =============================================================================

ENABLE_PROGRESS_TRACKING=true         # Enable progress tracking
PROGRESS_UPDATE_INTERVAL_MS=500       # Progress update frequency
ENABLE_SSE=true                       # Enable Server-Sent Events

# =============================================================================
# QUEUE SYSTEM
# =============================================================================

USE_QUEUE_SYSTEM=true                 # Enable Redis-based job queuing
REDIS_URL=redis://redis:6379          # Redis connection URL (Docker service)
QUEUE_MAX_WORKERS=2                   # Maximum concurrent workers

# =============================================================================
# PERFORMANCE & RESOURCES
# =============================================================================

MAX_CONCURRENCY=1                     # Maximum concurrent transcriptions
MAX_UPLOAD_MB=100                     # Maximum file upload size in MB

# =============================================================================
# AUTHENTICATION
# =============================================================================

BASIC_AUTH_USERNAME=                  # HTTP Basic Auth username (optional)
BASIC_AUTH_PASSWORD=                  # HTTP Basic Auth password (optional)

# =============================================================================
# CORS & SECURITY
# =============================================================================

ALLOWED_ORIGINS=["*"]                 # CORS allowed origins

# =============================================================================
# DATABASE
# =============================================================================

DATABASE_URL=sqlite:///./app.db        # SQLite database path
DATABASE_ECHO=false                    # SQL query logging

# =============================================================================
# DEVELOPMENT
# =============================================================================

DEBUG=false                            # Debug mode
RELOAD=false                           # Auto-reload on code changes
