{
	"name": "dgmeets-frontend",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build:fast": "vite build --minify=false --sourcemap=false",
		"build:analyze": "vite build --mode analyze && npm run analyze",
		"analyze": "npx vite-bundle-analyzer dist",
		"preview": "vite preview --port 5173",
		"type-check": "tsc --noEmit",
		"size-check": "npx bundlesize",
		"unused-check": "npx unimported",
		"unused-files": "npx unimported --show-unused-files",
		"unused-exports": "npx ts-unused-exports tsconfig.json"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"dexie": "4.0.8",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-router-dom": "6.26.1"
	},
	"devDependencies": {
		"@tauri-apps/api": "^2.8.0",
		"@tauri-apps/plugin-shell": "^2.3.1",
		"@types/node": "^20.0.0",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"@vitejs/plugin-react": "4.3.1",
		"bundlesize": "^0.18.1",
		"typescript": "5.5.4",
		"vite": "5.4.1",
		"vite-bundle-analyzer": "^0.7.0"
	},
	"bundlesize": [
		{
			"path": "dist/assets/*.js",
			"maxSize": "250kb",
			"compression": "gzip"
		},
		{
			"path": "dist/assets/vendor-*.js",
			"maxSize": "200kb",
			"compression": "gzip"
		},
		{
			"path": "dist/assets/audio-*.js",
			"maxSize": "150kb",
			"compression": "gzip"
		}
	]
}
