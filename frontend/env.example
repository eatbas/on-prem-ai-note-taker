# Frontend Environment Configuration - LOCAL or VPS Client
# Copy this file to .env.local (local dev) or .env (VPS build) and fill in your values

# =============================================================================
# VPS CONNECTION CONFIGURATION (REQUIRED)
# =============================================================================

# Your frontend connects to the backend API at this URL
# - Local:   http://localhost:8000/api
# - VPS:     http://<your-vps-ip>:8000/api
# When backend runs inside Docker on VPS and frontend runs on your laptop,
# always point to the VPS public API URL:
VITE_API_BASE_URL=http://95.111.244.159:8000/api

# =============================================================================
# AUTHENTICATION (REQUIRED - Must match VPS backend)
# =============================================================================

VITE_BASIC_AUTH_USERNAME=myca         # HTTP Basic Auth username (must match backend)
VITE_BASIC_AUTH_PASSWORD=wj2YyxrJ4cqcXgCA  # HTTP Basic Auth password (must match backend)

# =============================================================================
# DEVELOPMENT & DEPLOYMENT
# =============================================================================

VITE_DEV_MODE=true                     # Development mode flag
VITE_LOG_LEVEL=info                    # Log level: debug, info, warn, error

# =============================================================================
# FEATURE FLAGS
# =============================================================================

VITE_ENABLE_PROGRESS_TRACKING=true    # Enable progress tracking UI
VITE_ENABLE_SSE=true                  # Enable Server-Sent Events
VITE_ENABLE_JOB_MANAGEMENT=true       # Enable job management features
VITE_ENABLE_SPEAKER_IDENTIFICATION=true # NEW: Enable speaker differentiation in transcripts
VITE_ENABLE_TURKISH_SUPPORT=true      # NEW: Enhanced Turkish language support

# =============================================================================
# UI CONFIGURATION
# =============================================================================

VITE_DEFAULT_LANGUAGE=auto            # Default language selection
VITE_SHOW_LANGUAGE_SELECTOR=true      # Show language selector in UI
VITE_SHOW_PROGRESS_BARS=true          # Show progress bars
VITE_SHOW_ETA=true                    # Show estimated time remaining

# =============================================================================
# PERFORMANCE
# =============================================================================

VITE_PROGRESS_UPDATE_INTERVAL=500     # Progress update interval in ms
VITE_SSE_TIMEOUT=30000                # SSE connection timeout in ms
VITE_MAX_FILE_SIZE_MB=200             # OPTIMIZED: Increased to 200MB for longer meetings (2+ hours)
VITE_AUDIO_CHUNK_MS=20000             # MediaRecorder chunk interval (30s) for better context

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

VITE_ENABLE_ANALYTICS=false           # Enable usage analytics
VITE_ENABLE_ERROR_REPORTING=true      # Enable error reporting
VITE_ENABLE_PERFORMANCE_MONITORING=false # Enable performance monitoring

# =============================================================================
# CUSTOMIZATION
# =============================================================================

VITE_APP_TITLE="AI Note Taker"        # Application title
VITE_APP_DESCRIPTION="AI-powered note taking with transcription and summarization"
VITE_APP_VERSION="1.0.0"              # Application version

# =============================================================================
# INTEGRATION
# =============================================================================

VITE_OLLAMA_MODEL=qwen2.5:3b-instruct # OPTIMIZED: Fast 3B model perfect for meeting notes
VITE_WHISPER_MODEL=tiny               # Default Whisper model (optimized for VPS)
VITE_SUPPORTED_LANGUAGES=tr,en,auto   # Supported languages for UI

# =============================================================================
# NEW FEATURES & OPTIMIZATIONS
# =============================================================================

VITE_MEETING_NOTE_TEMPLATE=default    # Meeting note template style
VITE_ACTION_ITEM_EXTRACTION=true       # Enable automatic action item extraction
VITE_SUMMARY_LENGTH=medium            # Summary length: short, medium, long
VITE_ENABLE_BILINGUAL_SUPPORT=true    # Enhanced Turkish/English support

# =============================================================================
# DEBUGGING
# =============================================================================

VITE_DEBUG_MODE=false                  # Debug mode for development
VITE_SHOW_DEBUG_INFO=false            # Show debug information in UI
VITE_LOG_API_CALLS=false              # Log all API calls

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. Use .env.local for local dev; use .env for packaged builds
# 2. Set VITE_API_BASE_URL to your backend: local or VPS
# 3. Authentication credentials must match the backend
# 4. Frontend runs on your laptop at http://localhost:5173 by default
# 5. Backend runs on VPS at http://<your-vps-ip>:8000
# 6. NEW: Using qwen2.5:3b-instruct model for optimal performance (6-7s response time)
# 7. NEW: Speaker identification enabled for better meeting transcripts
# 8. NEW: Enhanced Turkish/English bilingual support
# 9. NEW: Support for 200MB files (2+ hour meetings)
