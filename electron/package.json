{
	"name": "on-prem-ai-note-taker-electron",
	"version": "0.1.0",
	"private": true,
	"main": "main.js",
	"description": "Electron wrapper for On-Prem AI Note Taker",
	"scripts": {
		"dev": "electron .",
		"build:win": "electron-builder --win nsis",
		"build:mac": "electron-builder --mac dmg",
		"build:linux": "electron-builder --linux AppImage deb",
		"build:all": "electron-builder -mwl",
		"build:app": "node build-app.js",
		"start": "electron .",
		"postinstall": "electron-builder install-app-deps"
	},
	"devDependencies": {
		"electron": "30.0.9",
		"electron-builder": "24.13.3"
	},
	"build": {
		"appId": "com.onprem.note",
		"productName": "On-Prem AI Note Taker",
		"directories": {
			"buildResources": "build",
			"output": "dist-electron"
		},
		"files": [
			"main.js",
			"preload.js",
			"dist/**/*"
		],
		"extraResources": [
			{
				"from": "../backend",
				"to": "backend",
				"filter": ["**/*", "!__pycache__", "!*.pyc", "!venv", "!.env*"]
			},
			{
				"from": "../frontend/dist",
				"to": "dist",
				"filter": ["**/*"]
			}
		],
		"extraMetadata": {
			"name": "on-prem-ai-note-taker",
			"version": "1.0.0"
		},
		"win": {
			"target": ["nsis"],
			"artifactName": "OnPremNoteTaker-Setup-${version}.exe"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "On-Prem AI Note Taker"
		},
		"mac": {
			"target": ["dmg"],
			"artifactName": "OnPremNoteTaker-${version}.dmg",
			"icon": "icon.icns"
		},
		"linux": {
			"target": ["AppImage", "deb"],
			"artifactName": "OnPremNoteTaker-${version}.${ext}",
			"icon": "icon.png",
			"category": "Office"
		}
	}
}


