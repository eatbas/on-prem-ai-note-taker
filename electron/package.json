{
	"name": "dgmeets-electron",
	"version": "1.0.0",
	"private": true,
	"main": "main.js",
	"description": "Electron wrapper for dgMeets",
	"scripts": {
		"dev": "electron .",
		"build:win": "electron-builder --win nsis",
		"build:mac": "electron-builder --mac dmg",
		"build:linux": "electron-builder --linux AppImage deb",
		"build:all": "electron-builder -mwl",
		"build:app": "node build-app.js",
		"start": "electron .",
		"postinstall": "electron-builder install-app-deps"
	},
	"devDependencies": {
		"electron": "30.0.9",
		"electron-builder": "24.13.3"
	},
	"build": {
		"appId": "com.dgmeets.app",
		"productName": "dgMeets",
		"directories": {
			"buildResources": "build",
			"output": "dist-electron"
		},
		"files": [
			"main.js",
			"preload.js",
			"dist/**/*"
		],
		"extraResources": [
			{
				"from": "../backend",
				"to": "backend",
				"filter": [
					"**/*",
					"!__pycache__",
					"!*.pyc",
					"!venv",
					"!.env*"
				]
			},
			{
				"from": "../frontend/dist",
				"to": "dist",
				"filter": [
					"**/*"
				]
			}
		],
		"extraMetadata": {
			"name": "dgmeets",
			"version": "1.0.0"
		},
		"win": {
			"target": [
				"nsis"
			],
			"artifactName": "dgMeets-Setup-${version}.exe",
			"icon": "dgMeets-512.png"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "dgMeets"
		},
		"mac": {
			"target": [
				"dmg"
			],
			"artifactName": "dgMeets-${version}.dmg",
			"icon": "dgMeets-512.png"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"artifactName": "dgMeets-${version}.${ext}",
			"icon": "dgMeets-512.png",
			"category": "Office"
		}
	},
	"dependencies": {
		"dotenv": "^17.2.1"
	}
}
